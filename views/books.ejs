<!DOCTYPE html>
<head>
  <meta charset="utf-8" />
  <title>Professor's Book</title>
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
  />
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="stylesheet" href="/css/books.css" />
  <link rel="stylesheet" href="/css/modal.css" />
  <link rel="icon" href="favicon.ico" />
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300|Roboto+Mono:700|Raleway:100"
    rel="stylesheet"
  />
</head>
<body>
  <header class="main-header" id="home">
    
    <nav class="header-container clearfix">
      <div class="logo">
      </div>

     
      <span class="site-name">AstroLibrary</span>
      <!-- <br> -->
      <!-- <ul class="main-nav" style="padding-right: 9%;">
          <li><a class="link1" href="/">Home</a></li>
        </ul> -->
    </nav>
  </header>
  <div class="main" id="portfolio">
    <section class="books-grid main">
      <div class="books">
        <% books.forEach((book)=>{ %>
        <div class="book">
          <div class="book-img">
            <a href="<%= book.book %>" download>
              <img id="book-cover" src="<%= book.cover %>" />
            </a>
          </div>
          <div class="book-name">
            <h4 class="b-name"><%= book.name %></h4>
            <!-- <br> -->
            <!-- <br> -->
            <% if(book.author) { %>
            <h4 class="a-name">
              <span style="font-weight: bold; font-family: sans-serif"
                >Author: </span
              ><%= book.author %>
            </h4>
            <% } %>
          </div>
          <!-- <br> -->

          <!-- <br> -->
          <!-- <div class="aut-name">
              
              
            </div> -->
          <div class="buttons">
            <div class="view-btn button">
              <a class="button-style" href="<%= book.book %>" target="__blank"
                ><p>View</p></a
              >
            </div>
            <div class="dl-btn button">
              <a class="button-style" href="<%= book.book %>" download=""
                ><p>Download</p></a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
  </div>

  <img src="backim/2.png" class="book-im" />
  <!-- <div style="height:00px;width:auto ">
    <img src="backim/2.png" >
  </div> -->
</body>
